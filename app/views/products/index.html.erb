<header class='toppage-header'> 
  <div class='header-container'>
    <div class='header-main'>
      <h1 class='header-main__icon'>
        <%= link_to "#" do %>
          <%= image_tag "/material/logo/logo.png",class:"icon" %>
        <% end %>
      </h1>
      <div class='header-main__searchbox'>
        <%= form_with(url: "#", local: true, method: :get, class: "search-form") do |form| %>
          <%= form.text_field :keyword, placeholder: "キーワードから探す", class: "search-input" %>
          <%= button_tag type: :submit, class: "search-icon" do %>
            <%= image_tag "/material/icon/icon-search 1.png",class:"icon" %>
          <% end %>
        <% end %>
      </div>
      <ul class='result-lists'></ul>
    </div>
    <div class='nav'>
      <ul class='lists-left'>
        <li class='lists-left__item '>
          <%= link_to "カテゴリー", "#",class:"link-category" %>
          <div class="category">
            <ul class='category__tree'>
            <% @categories.each do |category| %>
              <%= render partial: "category", locals: { category: category } %>
            <% end %>
            </ul>
          </div>
        </li>
        <li class='lists-left__item'>
          <%= link_to "ブランド", "#",class:"link-brand" %>
          <ul class='brandsPulldown displayNone'>
          </ul>
        </li>
      </ul>
      <ul class='lists-right'>
      <% if user_signed_in? %>
        <li class='lists-right__login'>
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
        </li>
      <% else %>
        <li class='lists-right__login'>
          <%= link_to "ログイン", new_user_session_path, class: 'post' %>
        </li>
        <li class='lists-right__new'>
          <%= link_to "新規会員登録", new_user_registration_path, class: 'post' %>
        </li>
      <% end %>
      </ul>
    </div>
  </div>
</header>

